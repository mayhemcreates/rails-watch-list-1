
<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
        <div class = "col-md-4">
      <%= link_to list_path(list) do %>
        <div class = "list-card" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.52), rgba(0, 0, 0, 0.73)), url(<%= list.image_url %>); background-size: contain;">
          <h2><%= list.name %></h2>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
